        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="420*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0" Grid.Column="0" Margin="10,10,10,10" />

        <Grid Grid.Row="1" Grid.Column="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270*" />
                <ColumnDefinition Width="80*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Grid.Column="0" Margin="10,0,0,10" />
            <Button Content="입력" Grid.Row="0" Grid.Column="1" Margin="0,0,10,10" />
        </Grid>
    </Grid>
</UserControl>
